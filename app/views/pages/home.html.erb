<h1>This is a wonderful bookstore!</h1>
<% if merchant_signed_in? %>
  <h2>Hello merchant <%= current_merchant.name %> <%= link_to 'log out', destroy_merchant_session_path, method: :delete %></h2>
<% elsif customer_signed_in? %>
  <h2>Hello customer <%= link_to current_customer.name, customer_path(current_customer) %> <%= link_to 'log out', destroy_customer_session_path, method: :delete %></h2>
  <%= link_to 'edit', edit_customer_path(current_customer) %>
<% end %>

<%= link_to "Sell some books", new_merchant_registration_path %>
<br>
<%= link_to "register to buy books", new_customer_registration_path %>
