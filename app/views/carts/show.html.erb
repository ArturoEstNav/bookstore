<h1>Checkout</h1>
<div class="container-cart">
  <% @cart_items.each do |item| %>
    <p> <%= item.book.title %> $<%= item.book.price %> </p>
    <p> <%= link_to "Remove item", cart_item_path(item), method: :delete, remote: true %></p>

  <% end %>
  <p>Subtotal: <%= @cart.subtotal %></p>
  <p>Subtotal: <%= @cart.service_fee %></p>
  <p>Total: <%= @cart.total %></p>
  <% if customer_signed_in?  %>
    <%= link_to 'Purchase', carts_path, method: :patch, class: "btn btn-primary" %>
  <% else  %>
    <%= link_to 'Purchase', new_customer_session_path, class: "btn btn-primary" %>
  <% end %>
</div>


